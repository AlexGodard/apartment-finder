{
  "compilerOptions": {
    "lib": ["es5", "es6", "es7", "es2017"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
      ]
    }
  },
  "include": ["src/**/*"]
}
